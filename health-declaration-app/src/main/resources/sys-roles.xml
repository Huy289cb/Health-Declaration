<?xml version = "1.0" encoding="UTF-8" ?>

<!-- A list of system-managed user roles. These roles are created/updated 
	at system start-up, and cannot be modified/deleted at runtime. For method-level 
	security check, we can hard-code these roles such as @PreAuthorize("hasRole('ROLE_ADMIN')") -->

<sys-roles>
	<sys-role>
		<name>ROLE_ADMIN</name>
		<description>The system administrative role</description>
	</sys-role>
	<sys-role>
		<name>ROLE_USER</name>
		<description>This system role user</description>
	</sys-role>
	<sys-role>
		<name>ROLE_SUPER_ADMIN</name>
		<description>This system role super admin</description>
	</sys-role>
	<sys-role>
		<name>ROLE_HEALTHCARE_STAFF</name>
		<description>This system role healthcare staff</description>
	</sys-role>
		<sys-role>
		<name>ROLE_MEDICAL_TEAM</name>
		<description>This system role Medical team</description>
	</sys-role>
</sys-roles>